<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.qi4j</groupId>
    <artifactId>qi4j</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>
  <groupId>org.qi4j</groupId>
  <artifactId>qi4j-extensions</artifactId>
  <name>Qi4j Extension (Build POM)</name>
  <version>0.5-SNAPSHOT</version>
  <packaging>pom</packaging>
  <!-- This POM is ONLY to initiate the modules to be built. -->
  <modules>
    <module>indexing-rdf</module>
    <module>rest</module>
    <module>entitystore-neo4j</module>
    <module>entitystore-ibatis</module>
    <module>entitystore-jdbm</module>
    <module>entitystore-jgroups</module>
    <module>entitystore-quick</module>
    <module>entitystore-rmi</module>
    <module>entitystore-s3</module>
  </modules>

  <profiles>
    <profile>
      <id>gigaspaces</id>
      <activation>
        <property>
          <!--
            specifiy -Dcom.gs.home=$JSHOMEDIR and let that point to a local GS installation;
            we cannot use JSHOMEDIR for profile activation because:
            http://jira.codehaus.org/browse/MNG-2848
            http://jira.codehaus.org/browse/MNGECLIPSE-247
          -->
          <name>com.gs.home</name>
        </property>
      </activation>

      <modules>
        <module>entitystore-javaspaces</module>
      </modules>
    </profile>
  </profiles>
</project>
