<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>src</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../qi4j-core/api</directory>
      <outputDirectory>qi4j-core/api</outputDirectory>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>target/**</exclude>
      </excludes>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../qi4j-core/spi</directory>
      <outputDirectory>qi4j-core/spi</outputDirectory>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>target/**</exclude>
      </excludes>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../qi4j-core/bootstrap</directory>
      <outputDirectory>qi4j-core/bootstrap</outputDirectory>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>target/**</exclude>
      </excludes>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../qi4j-core/runtime</directory>
      <outputDirectory>qi4j-core/runtime</outputDirectory>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>target/**</exclude>
      </excludes>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../qi4j-core/testsupport</directory>
      <outputDirectory>qi4j-core/testsupport</outputDirectory>
      <excludes>
        <exclude>*.iml</exclude>
        <exclude>target/**</exclude>
      </excludes>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
  
