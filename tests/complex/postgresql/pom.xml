
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.qi4j.tests</groupId>
        <artifactId>qi4j-tests-sql</artifactId>
        <version>1.3-SNAPSHOT</version>
    </parent>
    <groupId>org.qi4j.tests</groupId>
    <artifactId>qi4j-tests-postgresql</artifactId>
    <name>Qi4j Tests - PostgreSQL Indexing and Querying</name>

    <properties>
      <version.sql-generator>0.2</version.sql-generator>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.qi4j.extension</groupId>
            <artifactId>qi4j-entitystore-preferences</artifactId>
            <version>${version.qi4j-ext}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.qi4j.extension</groupId>
            <artifactId>qi4j-indexing-sql</artifactId>
            <version>${version.qi4j-ext}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>8.4-701.jdbc4</version>
            <type>jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.qi4j.core</groupId>
            <artifactId>qi4j-core-testsupport</artifactId>
        </dependency>
        <dependency>
            <groupId>org.qi4j.extension</groupId>
            <artifactId>qi4j-entitystore-sql</artifactId>
            <version>${version.qi4j-ext}</version>
        </dependency>
        <dependency>
        	<groupId>org.java-sql-generator.implementation</groupId>
        	<artifactId>java-sql-generator-implementation</artifactId>
        	<version>${version.sql-generator}</version>
        	<scope>test</scope>
        </dependency>
        <dependency>
        	<groupId>org.qi4j.core</groupId>
        	<artifactId>qi4j-core-runtime</artifactId>
        	<scope>test</scope>
        </dependency>
        <dependency>
        	<groupId>org.slf4j</groupId>
        	<artifactId>slf4j-simple</artifactId>
        	<type>jar</type>
        	<scope>compile</scope>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-pmd-plugin</artifactId>
                <configuration>
                    <targetJdk>1.6</targetJdk>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <minimumTokens>100</minimumTokens>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
</project>