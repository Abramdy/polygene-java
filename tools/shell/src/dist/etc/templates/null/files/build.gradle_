
version = 1.0

rootProject.ext {
  polygeneVersion = @version@
}

allprojects() {
  apply plugin: 'java'
  apply plugin: 'maven'

  repositories {
    mavenLocal()
    mavenCentral()
  }

  dependencies {
    compile "org.apache.polygene.core:org.apache.polygene.core.api:$polygeneVersion"
    testCompile "org.apache.polygene.core:org.apache.polygene.core.testsupport:$polygeneVersion"
  }
}

